<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_container"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/et_titulo"
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_margin="2dp"
        android:layout_marginLeft="5dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="Titulo"
        android:padding="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="103dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_imagen"
            android:layout_width="104dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:background="@android:color/transparent"
            android:onClick="openContextMenu"
            android:src="@drawable/mas" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_fecha"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="DD/MM/YYYY"
                android:padding="5dp" />

            <EditText
                android:id="@+id/et_hora"
                android:layout_width="match_parent"
                android:layout_height="47dp"
                android:layout_margin="2dp"
                android:layout_weight="0"
                android:ems="10"
                android:hint="00:00"
                android:padding="5dp" />
        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/et_descripcion"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="2dp"
        android:layout_weight="0"
        android:ems="10"
        android:hint="DescripciÃ³n"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:id="@+id/botonera"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:layout_weight="0">

        <Button
            android:id="@+id/btn_aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_selector"
            android:text="aceptar"
            android:textColor="@color/primary" />

        <Button
            android:id="@+id/btn_cancelar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/dialog_button_cancelar"
            android:text="cancelar"
            android:textColor="@color/icons" />
    </LinearLayout>



</LinearLayout>